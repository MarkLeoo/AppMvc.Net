@inject App.Service.PlanetService planetService

@{
    ViewData["Title"] = "Các hành tinh trong hệ mặt trời";
}

<h1>@ViewData["Title"]</h1>

<div class="list-group">
    @foreach (var planet in planetService)
    {
        <a asp-action="@planet.Name" class="list-group-item list-group-item-action">
            @planet.VnName (@planet.Name)
        </a>
    }
</div>
